<?xml version="1.0" encoding="utf-8"?>

<manifest package="se.ekonomipuls" android:versionName="0.1.Pre-Alpha-9" android:versionCode="8" xmlns:android="http://schemas.android.com/apk/res/android">
	<application android:icon="@drawable/ic_launcher_ekonomipuls" android:name="se.ekonomipuls.EkonomipulsApplication" android:debuggable="false" android:label="@string/app_homescreen">
		<activity android:name="EkonomipulsHome" android:screenOrientation="portrait" android:theme="@android:style/Theme.NoTitleBar">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<receiver android:name=".reciever.BankDroidTransactionsReceiver">
			<intent-filter>
				<action android:name="com.liato.bankdroid.action.TRANSACTIONS"></action>
			</intent-filter>
		</receiver>
		<service android:enabled="true" android:name=".service.async.BankDroidImportIntentService"></service>

		<activity android:theme="@android:style/Theme.NoTitleBar" android:name="OverviewSettings"></activity>


		<activity android:name="AddEditCategory" android:theme="@android:style/Theme.NoTitleBar"></activity>
		<activity android:name="FilterRuleOverview" android:theme="@android:style/Theme.NoTitleBar"></activity>
		<activity android:name="VerifyTransactions" android:theme="@android:style/Theme.NoTitleBar"></activity>
	</application>
	<uses-sdk android:minSdkVersion="7"/>
	<uses-permission android:name="com.liato.bankdroid.permission.READ_ACCESS_BANK_TRANSACTIONS"/>
	<!--  Debug functionality -->
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
</manifest> 